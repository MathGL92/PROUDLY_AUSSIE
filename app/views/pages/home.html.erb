<div class="banner">
    <div class="banner-content text-center">
        <h1>Proudly Aussie</h1>
        <p>Australian made, local produce!</p>
    </div>
</div>

<div class="d-flex justify-content-center m-3">

<div id="carouselExampleIndicators" class="carousel slide w-85" data-ride="carousel">
    <ol class="carousel-indicators dark">
        <%  @tags.each_with_index do |tag, index| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>"></li>
        <% end %>
    </ol>
    <div class="carousel-inner">
        <% @tags.each_with_index do |tag, index| %>
            <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= link_to producers_path(tag_name: tag.name) do %>
                <%= image_tag "photo1.jpg", class: "d-block w-100" %>
                <div class="carousel-caption d-md-block">
                <h2><%= tag.name %></h2>
                <p>Browse these products!</p>
                </div>
                <% end %>
            </div>
        <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
</div>
