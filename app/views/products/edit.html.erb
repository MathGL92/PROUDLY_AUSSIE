<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-offset-4">
      <% if @product.photo.attached? %>
        <div class="bg-picture-product" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @product.photo.key %>')">
        </div>
      <% else %>
        <div class="bg-picture-product" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1549301019-6013533c514d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1056&q=80')">
        </div>
      <% end %>
      <div class="form-login">
        <h3>Edit <%=@product.name%>:</h3>
        <%= simple_form_for [ @product ] do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <%= f.input :name, label: false, placeholder: "What is it?"%>
          <%= f.input :description, label: false, input_html: { rows: 8 }, placeholder: "Tell your customers more! How is it made? Why is it unique? Why will people love it?... ❤️" %>
          <%= f.select :tags, Tag.all.pluck(:name, :id), {}, { multiple: true, id: "tag-field" } %>
          <%= f.input :price, label: false, placeholder: "$", input_html: {value: '$'} %>
          <%= f.input :photo, as: :file, label: "Change photo:" %>
          <%= f.button :submit, class: "btn btn-primary"%>
        <% end %>
        <%= link_to 'Back', "/dashboard", class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>