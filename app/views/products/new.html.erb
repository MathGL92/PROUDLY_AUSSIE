<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-offset-4">
      <div class="form-login">
        <h3>Your new product</h3>
          <%= simple_form_for [ @product ] do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
              <%= f.input :name, label: false, placeholder: "What is it?"%>
              <%= f.input :description, label: false, input_html: { rows: 8 }, placeholder: "Tell your customers more! How is it made? Why is it unique? Why will people love it?... ❤️" %>
              <%= f.select :tags, Tag.all.pluck(:name, :id), {}, { multiple: true, id: "tag-field" } %>
              <%= f.input :price, label: false, placeholder: "$", input_html: {value: '$'} %>
              <%= f.input :photo, as: :file, label: "Add a nice photo" %>
              <%= f.button :submit, class: "btn btn-primary"%>
            <% end %>
        <%= link_to 'Back', "/dashboard", class:"btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>