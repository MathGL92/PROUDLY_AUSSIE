<h1> <%= @user.first_name %>'s Dashboard</h1>
<h5>My Products:</h5>

<table style="width:100%">
  <tr>
    <th>Product Name</th>
    <th>Update</th>
  </tr>
  <% @producer.products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td>Click to Update</td>
    <td>
      <%= link_to ('<i class="fas fa-edit"></i>').html_safe, edit_product_path(product) %>
      <%= link_to ('<i class="far fa-trash-alt"></i>').html_safe, producer_product_path(@producer, product), method: :delete, data: { confirm: "Are you sure?" } %>
    </td>
    <% product_tags = [] %>
    <% product.tags.each do |tag| %>
    <% product_tags << tag.name %>
    <% end %>
    <td> <%= product_tags %> </td>
  </tr>
<% end %>
</table>

<%=link_to 'Add a new product', new_product_path %>
