<div class="container">
  <div class="row py-4">
    <div class="col-md-3"></div>
    <div class="col">
      <h1>Order #<% @order.id %> <small><span class="badge badge-primary">State: <%= @order.state %></span></small></h1>

      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong><%= @order.created_at.to_date %></li>
        <li><strong>PRODUCT</strong>
        <% @order.shopping_cart.line_items.each do |lineitem| %>
            <%= lineitem.product.name %>
        <% end%>
        </li>
        <li><strong>TOTAL</strong><%=  @order.amount_cents %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
