
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-offset-4">
      <div class="form-login">
        <h2 style="color:#6E9156">Business Details</h2>
            <%= simple_form_for(@producer) do |f| %>
               <%= f.error_notification %>
               <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
               <%= f.input :name, label: "Full Name:" %>
               <%= f.input :company_name, label: "Company Name:" %>
               <%= f.input :ABN, label: "ABN:" %>
               <%= f.input :address, label: "Business Address" %>
               <%= f.input :introduction, label: "A little bit about you:", placeholder: "Tell us about your Australian Story..."%>
               <%= f.input :tagline, placeholder: "Short description / Tagline (Max 30 Characters)"%>
               <%= f.input :photo, as: :file, label: "Profile Picture:" %>
               <%= f.input :bg_photo, as: :file, label: "Background Photo:" %>
               <%= f.button :submit, class: "btn btn-primary"%>
            <% end %>
            <%= link_to 'Back', "/new_producer", class:"btn btn-outline-primary" %>
            
      </div>
    </div>
  </div>
</div>

